<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="8dp"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="15dp">

        <TextView
            android:layout_alignParentTop="true"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deluxe double room"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_semibold"
            tools:ignore="HardcodedText" />

        <ImageView
            android:layout_alignParentTop="true"
            android:id="@+id/ivImage"
            android:rotation="90"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24"
            tools:ignore="ContentDescription" />

<!--        <androidx.cardview.widget.CardView-->
<!--            android:id="@+id/card"-->
<!--            android:visibility="gone"-->
<!--            android:layout_below="@id/textView"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:backgroundTint="@color/white"-->
<!--            app:cardCornerRadius="10dp">-->

            <LinearLayout
                android:id="@+id/card"
                android:visibility="gone"
                android:layout_below="@id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:layout_marginVertical="15dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/headText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:gravity="center"
                        android:text="Standard Single Room"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_semibold"
                        android:textStyle="normal"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="5dp"
                        android:drawablePadding="5dp"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:text="Max 2 Adults"
                        android:textColor="@color/black"
                        android:textSize="11sp"
                        android:textStyle="normal"
                        app:drawableStartCompat="@drawable/ic_baseline_person_24"
                        tools:ignore="HardcodedText" />

                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/pic"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/pic"
                        tools:ignore="ContentDescription" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Room Only"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="14sp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins"
                    android:text="Non Refundable"
                    android:textColor="@color/black"
                    app:drawableStartCompat="@drawable/close"
                    tools:ignore="HardcodedText" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="12dp">

                    <TextView
                        android:id="@+id/text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="KWD "
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/text2"
                        android:layout_toEndOf="@id/text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="38.55"
                        android:textColor="@color/red"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_semibold"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_toEndOf="@id/text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text=" / night"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        tools:ignore="HardcodedText" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="90dp"
                        android:layout_height="36dp"
                        android:layout_alignParentEnd="true"
                        android:backgroundTint="@color/red"
                        app:cardCornerRadius="6dp">

                        <!--                            <LinearLayout-->
                        <!--                                android:layout_width="wrap_content"-->
                        <!--                                android:layout_height="wrap_content"-->
                        <!--                                android:orientation="horizontal"-->
                        <!--                                android:padding="10dp"-->
                        <!--                                android:weightSum="3">-->

                        <!--                                <ImageView-->
                        <!--                                    android:layout_width="wrap_content"-->
                        <!--                                    android:layout_height="wrap_content"-->
                        <!--                                    android:layout_gravity="center"-->
                        <!--                                    android:layout_weight="1"-->
                        <!--                                    android:src="@drawable/subtract"-->
                        <!--                                    tools:ignore="ContentDescription" />-->

                        <TextView
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text=" -     1     + "
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            tools:ignore="HardcodedText" />

                        <!--                                <ImageView-->
                        <!--                                    android:layout_width="wrap_content"-->
                        <!--                                    android:layout_height="wrap_content"-->
                        <!--                                    android:layout_weight="1"-->
                        <!--                                    android:src="@drawable/ic_baseline_add_24"-->
                        <!--                                    tools:ignore="ContentDescription" />-->

                        <!--                            </LinearLayout>-->

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="10dp"
                    app:dividerColor="@color/grey" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Room Only"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />

                <include
                    layout="@layout/refund_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    app:dividerColor="@color/grey" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bed And Breakfast"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins"
                    android:text="Non Refundable"
                    android:textColor="@color/black"
                    app:drawableStartCompat="@drawable/close"
                    tools:ignore="HardcodedText" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="12dp">

                    <TextView
                        android:id="@+id/text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="KWD "
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/text4"
                        android:layout_toEndOf="@id/text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="47.55"
                        android:textColor="@color/red"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_semibold"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_toEndOf="@id/text4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text=" / night"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        tools:ignore="HardcodedText" />

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="1dp"
                        android:backgroundTint="@color/white"
                        android:text="Select"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        app:cornerRadius="6dp"
                        app:strokeColor="@color/black"
                        app:strokeWidth="1dp"
                        tools:ignore="HardcodedText" />

                </RelativeLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="10dp"
                    app:dividerColor="@color/grey" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bed And Breakfast"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="14sp"
                    tools:ignore="HardcodedText" />

                <include
                    layout="@layout/refund_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />

            </LinearLayout>

<!--        </androidx.cardview.widget.CardView>-->

    </RelativeLayout>

</androidx.cardview.widget.CardView>