<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:text="Free cancellation"
        android:textColor="@color/greenTwo"
        app:drawableEndCompat="@drawable/ic_baseline_info_24"
        app:drawableStartCompat="@drawable/ic_baseline_check_24"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/darkGreyText"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="before 03 Jun 11:59 PM"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:text="Book Now, Pay at property"
        android:textColor="@color/greenTwo"
        app:drawableEndCompat="@drawable/ic_baseline_info_24"
        app:drawableStartCompat="@drawable/ic_baseline_check_24"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/darkGreyText"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="Pay KWD 20 now, Rest before 03 Jun 11:59 PM"
        tools:ignore="HardcodedText" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="KWD 44.00 / night"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="1dp"
            android:backgroundTint="@color/white"
            android:text="Select"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:cornerRadius="7dp"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp"
            tools:ignore="HardcodedText" />

    </RelativeLayout>

</LinearLayout>