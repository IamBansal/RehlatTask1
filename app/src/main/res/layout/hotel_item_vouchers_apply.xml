<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hotelOfferLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="10dp"
    android:paddingTop="5dp"
    android:paddingEnd="10dp"
    android:paddingBottom="5dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/couponTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="MARHABA"
        android:textColor="@color/black"
        android:textSize="12sp"
        tools:ignore="HardcodedText" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/couponApplyTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/poppins_medium"
        android:paddingStart="15dp"
        android:paddingEnd="6dp"
        android:paddingBottom="15dp"
        android:text="apply"
        android:textColor="@color/green"
        android:textSize="12sp"
        tools:ignore="HardcodedText" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/offerRemoveImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:paddingStart="25dp"
        android:paddingTop="25dp"
        android:paddingEnd="6dp"
        android:paddingBottom="25dp"
        android:tint="@color/green"
        app:srcCompat="@drawable/ic_baseline_arrow_forward_ios_24" />
    <!--        app:srcCompat="@drawable/offer_remove" />-->

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/couponDescTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/couponTxt"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/poppins"
        android:text="Get flat 120 KWD off using CTNOV"
        android:textColor="@color/black"
        android:textSize="11sp"
        android:textStyle="normal"
        tools:ignore="HardcodedText" />

</RelativeLayout>